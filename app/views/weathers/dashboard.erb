
<div class="mdl-grid">


<div class="mdl-cell mdl-cell--4-col">

  <div class="demo-card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">Rides by precipitation(.5 - 1.0 inches)</h2>
      </div>

    <div class="mdl-card__supporting-text">
      <p> Max: <%= @weathers.sort_precip(0.5..1.0)[:max] %>    </p>
      <p> Min: <%= @weathers.sort_precip(0.5..1.0)[:min] %>    </p>
      <p> Avg: <%= @weathers.sort_precip(0.5..1.0)[:avg] %>    </p>

    </div>

    </div>
</div>
