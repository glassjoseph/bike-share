<div class="mdl-grid">
<div class="demo-card-square mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text"><%= @station.name %></h2>
  </div>
  <div class="mdl-card__supporting-text">
    <p> <strong>Number of rides started at station:</strong> <%= @trips.ride_start_by_station(@station.id) %> </p>

    <p> <strong>Number of rides ended at station:</strong> <%= @trips.ride_end_by_station(@station.id) %> </p>
    <p> <strong>Most popular destination:</strong> <%= @trips.destination_by_station(@station.id) %> </p>
    <p> <strong>Most popular origination:</strong> <%= @trips.origination_by_station(@station.id) %> </p>
    <p> <strong>Most popular Date:</strong> <%= @stations.most_popular_date(@station.id) %> </p>
    <p> <strong>Most common customer zip:</strong> <%= @stations.most_popular_customer_zip(@station.id) %> </p>
    <p> <strong>Most used bike:</strong> #<%= @stations.most_popular_bike(@station.id) %> </p>

</div>
</div>


<div class="mdl-cell mdl-cell--8-col">
<h1>Edit Station</h1>

<form action="/stations/<%= @station.id %>" method="post" class="pure-form pure-form-aligned">
  <input type="hidden" name="_method" value="PUT" />
    <fieldset>
        <div class="pure-control-group">
            <label for="name">Name: </label>
            <input name="station[name]" type="text" value=" <%= @station.name %>" required>
        </div>

        <div class="pure-control-group">
            <label for="dock_count">Dock Count: </label>
            <input name="station[dock_count]" type="text" value="<%= @station.dock_count %>" required>
        </div>

        <div class="pure-control-group">
            <label for="city">City: </label>
            <input name="city[name]" type="text" value="<%= @city_name %>" required>
        </div>

        <div class="pure-control-group">
            <label for="installation_date">Installation Date: </label>
            <input type="date" name="station[installation_date]" value="<%= Date.strptime(@station.installation_date.to_s, '%Y-%m-%d').to_s%>" required>
        </div>

        <div class="pure-controls">
            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Update</button>
        </div>
    </fieldset>
</form>

<form action="/stations/<%= @station.id %>" method="post" class="pure-form pure-form-aligned">
  <input type="hidden" name="_method" value="DELETE" />
  <div class="pure-controls">
    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised  mdl-js-ripple-effect mdl-button--accent">Delete</button>
  </div>

</form>
    </div>
</div>
